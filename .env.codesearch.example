# Codesearch Multi-Repository Configuration
#
# Point the native codesearch CLI to shared infrastructure
# Copy this file to .env.codesearch and source it before running commands

export POSTGRES_HOST=localhost
export POSTGRES_PORT=5432
export POSTGRES_USER=codesearch
export POSTGRES_PASSWORD=codesearch
export POSTGRES_DATABASE=codesearch

export QDRANT_HOST=localhost
export QDRANT_PORT=6334
export QDRANT_REST_PORT=6333

# Disable auto-start of Docker containers (infrastructure already running)
export CODESEARCH__STORAGE__AUTO_START_DEPS=false

# Usage:
#   source .env.codesearch
#   codesearch index
#   codesearch serve
