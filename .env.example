# Codesearch Environment Configuration
# Copy this file to .env and modify as needed

# Logging configuration
RUST_LOG=info
# Options: trace, debug, info, warn, error

# Qdrant configuration
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_REST_PORT=6333
# Collection name for storing code entities
QDRANT_COLLECTION=codesearch

# Embedding service configuration (for future use)
# EMBEDDING_SERVICE=openai
# OPENAI_API_KEY=your-api-key-here

# Application server configuration
APP_HOST=0.0.0.0
APP_PORT=8699

# Repository configuration
# Path to repository to index (defaults to current directory)
REPOSITORY_PATH=/workspace

# Indexing configuration
# Batch size for processing files
INDEX_BATCH_SIZE=100
# Show progress bar during indexing
INDEX_SHOW_PROGRESS=true

# File watching configuration
# Enable auto-indexing on file changes
WATCH_ENABLED=false
# Debounce time in milliseconds
WATCH_DEBOUNCE_MS=500

# Postgres configuration
POSTGRES_PASSWORD=codesearch
# Alternative: use strong password in production
# POSTGRES_PASSWORD=your_secure_password_here